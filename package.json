{
  "name": "dreammall-nostr-web-client",
  "version": "1.0.0",
  "description": "DreamMall NOSTR Web Client - Production-ready NOSTR client with chat interface, key management, profile management, and relay management",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 8080",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "lint": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "nostr-tools": "^2.15.0",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "gh-pages": "^6.3.0",
    "prettier": "^3.1.0",
    "terser": "^5.24.0",
    "vite": "^4.5.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "nostr",
    "chat",
    "decentralized",
    "messaging",
    "dreammall",
    "web-client",
    "pwa"
  ],
  "author": "DreamMall Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreammall/luna-1.git",
    "directory": "dreammall-nostr-integration/web-client"
  },
  "bugs": {
    "url": "https://github.com/dreammall/luna-1/issues"
  },
  "homepage": "https://github.com/dreammall/luna-1/tree/main/dreammall-nostr-integration/web-client#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
